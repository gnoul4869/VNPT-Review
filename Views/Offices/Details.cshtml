@model VNPT_Review.Models.UOfficeReview

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>@Html.DisplayFor(model => model.office.Name)</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.office.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.office.Note)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.office.FatherId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.office.FatherId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.office.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.office.Active)
        </dd>
        <dt class = "col-sm-2">
            Rating
        </dt>
        <dd class = "col-sm-10">
            @Model.office.Rating
            @{
                var max = 5;
                if(Model.office.Rating == 0)
                {
                    for(int i=0; i<max; i++)
                    {
                        <i class="fas fa-star" style="color:#ffffff; text-shadow: 0 0 2px #000000"></i>
                    }
                }
                else 
                {
                    int i;
                    for(i=0; i<Model.office.Rating; i++)
                    {
                        if(i >= Model.office.Rating - 1 && Model.office.Rating % 1 != 0)
                        {
                            <i class="fas fa-star-half" style="color:#fffc3d; text-shadow: 0 0 2px #000000"></i>
                        }
                        else
                        {
                            <i class="fas fa-star" style="color:#fffc3d; text-shadow: 0 0 2px #000000"></i>
                        }
                    }
                    while(i < max) 
                    {
                        <i class="fas fa-star" style="color:#ffffff; text-shadow: 0 0 2px #000000"></i>
                        i++;
                    }
                }
            }
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.office.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    @if(Model.reviews.Count() > 0)
    {
        @foreach (var item in Model.reviews)
        {
            @Html.DisplayNameFor(model => item.Id)
            @Html.DisplayFor(model => item.Id)

            @Html.DisplayNameFor(model => item.Rating)
            @Html.DisplayFor(model => item.Rating)

            @Html.DisplayNameFor(model => item.Id)
            @Html.DisplayFor(model => item.Id)

            @Html.DisplayNameFor(model => item.Content)
            @Html.DisplayFor(model => item.Content)

            <a asp-controller="Review" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-controller="Review" asp-action="Delete">Delete</a>
        }
    }
    else 
    {
        <p>Hiện tại chưa có đánh giá nào.</p>
    }
</div>
