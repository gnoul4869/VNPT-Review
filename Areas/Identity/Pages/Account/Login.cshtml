@page "/login"
@model LoginModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Đăng nhập";
}

@if(SignInManager.IsSignedIn(User))
{
    Response.Redirect(Url.Content("~/"));
}

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card-body p-5">
            <h2 class="text-primary text-center mb-5">Đăng nhập</h2>

            <form id="account" method="post">

                <div class="mb-4">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                </div>

                <div asp-validation-summary="All" class="text-danger pt-3"></div>

                <p class="text-center mt-4"><a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a></p>

                <p class="text-center text-muted mt-5 mb-0">Chưa có tài khoản? <a asp-area="Identity" asp-page="/Account/Register">Đăng ký</a></p>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
