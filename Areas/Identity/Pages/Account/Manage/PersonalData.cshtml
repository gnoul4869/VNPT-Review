@page "/Profile/Options"
@model PersonalDataModel
@{
    ViewData["Title"] = "Tuỳ chọn";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Tải về thông tin cá nhân của bạn.</p>
        <p>
            <strong>Tài khoản bị xoá sẽ không thể được khôi phục.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit mt-2">Tải về</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary mt-2">Xoá</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
